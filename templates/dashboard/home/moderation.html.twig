{% extends 'dashboard/base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}

    {% for post in posts %}

        <div class="md-box md-post md-content-padding">

            Раздел: {{ post.section | trans({},'posts') }} | Дата: {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }} |

            <hr>
            Заголовок:
            {{ post.title }}

            <br>
            <br>

            <img class="post-image" width="100%" src="{{ vich_uploader_asset(post) }}" alt="{{ post.title }}">

            <br>
            <br>

            Описание:
            {{ post.description | raw }}

            <br>

            <a href="{{ path('dash_moderation_publish', {'id':post.id}) }}" class="btn btn-success">Опубликовать</a>
            <a href="{{ path('dash_moderation_featured', {'id':post.id}) }}" class="btn btn-warning">
                <i class="fas fa-star"></i>
                В избранные
            </a>

        </div>


    {% else %}

        <div class="md-box md-content-padding text-center">
            У вас больше нет постов в модерации
        </div>

    {% endfor %}

{% endblock %}
