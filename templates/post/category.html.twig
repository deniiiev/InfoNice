{% extends 'base.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block top_adv %}
    <div class="banner container text-center my-3">
        <img src="{{ asset('assets/images/privet2.jpg') }}" height="100px" alt="privet">
    </div>
{% endblock %}

{% block main %}

    {% for post in posts %}

        <div class="md-post">

            {{ postInfo(post) }}
            {{ postTitle(post) }}
{#            {{ postCategories(post) }}#}
            {{ postImage(post) }}
            {{ postDescription(post) }}
            {{ postActions(post) }}

        </div>

    {% endfor %}

{% endblock %}
