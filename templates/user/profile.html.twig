{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    <div class="md-box md-content-padding">

        <div class="md-profile-block">
            <div class="back-picture bp-130" style="margin-right: 16px;background-image: url('{% if user.avatar %}{{ vich_uploader_asset(user) }}{% else %}{{ asset('assets/images/avatar.jpg') }}{% endif %}')">
            </div>

            <h3>{{ user.username }}</h3>

            <div>
                {{ user.about | raw }}
            </div>
        </div>

        <h5>Публикации</h5>

        <table class="table table-hover">

            <tbody>

            {% for post in posts %}

                <tr>
                    <td>{{ post.title }}</td>
                    <td style="text-align: center">{{ postStatus(post.status) }}</td>
                </tr>

            {% endfor %}

            </tbody>

        </table>

    </div>

{% endblock %}
