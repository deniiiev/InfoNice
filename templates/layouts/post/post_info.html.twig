
<div class="post-info">

    {% if type != 'low' %}

        {% if type != 'medium' %}

            <small>
                <i class="fas fa-user"></i>
                {% if post.anonymous %}
                    анонимно
                {% else %}
                    <a class="username" href="{{ path('user_profile', {'username': post.author.username }) }}">
                        {{ post.author.username }}
                    </a>
                {% endif %}
            </small>

        {% endif %}

        <small>
            <i class="fas fa-eye"></i>
            {{ post.views }}
        </small>

    {% endif %}


