{% if post.section == 'ads' %}

    <div class="md-box md-post md-post-ad">

        {{ postImage(post,true) }}
        {{ postTitle(post) }}
        {{ postInfo(post,'low') }}
        {{ postCategories(post) }}
        {{ postPrice(post) }}

    </div>

{% elseif post.section == 'questions' %}

    <div class="md-post md-box md-content-padding">

        {{ postTitle(post) }}
        {{ postInfo(post) }}
        {{ postCategories(post) }}
        {{ postDescription(post,100) }}
        {{ postActions(post) }}

    </div>

{% elseif post.section == 'news' %}

    <div class="md-post md-box md-content-padding md-post-news">

        {{ postTitle(post) }}
        {{ postInfo(post) }}
        {{ postCategories(post) }}
        {{ postImage(post) }}
        {{ postDescription(post,180) }}
        {{ postActions(post) }}

    </div>

{% endif %}
